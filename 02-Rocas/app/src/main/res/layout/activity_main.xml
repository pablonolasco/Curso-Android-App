<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"

    android:orientation="vertical"
    android:id="@+id/ln_Main"
    android:gravity="center">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="28sp"
        android:text="@string/tx_rocas"
        />

    <Button
        android:id="@+id/btn_play"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/btn.margin"
        android:textAllCaps="false"
        android:theme="@style/ButtonRocas"
        android:text="@string/btn.jugar"
        android:drawableLeft="@drawable/ic_play"
        />

    <Button
        android:id="@+id/btn_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/btn.margin"
        android:theme="@style/ButtonRocas"
        android:text="@string/btn.informaci_n"
        android:drawableLeft="@drawable/ic_info"
        />
    <Button
        android:id="@+id/btn_conf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/btn.margin"
        android:theme="@style/ButtonRocas"
        android:text="@string/btn.configuraci_n"
        android:drawableLeft="@drawable/ic_settings"
        />

    <Button
        android:id="@+id/btn_exit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/btn.margin"
        android:theme="@style/ButtonRocas"
        android:text="@string/btn.salir"
        android:drawableLeft="@drawable/ic_exit"
        />
</LinearLayout>