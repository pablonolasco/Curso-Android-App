<?xml version="1.0" encoding="utf-8"?>
<tool:menu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/apk/res-auto"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tool:context=".MainActivity">
    <item
        android:id="@+id/item_config"
        android:icon="@drawable/ic_settings"
        android:title="Configuración"
        android:iconTint="@color/icons"
        app:showAsAction="never"
        />

    <item
        android1:id="@+id/item_info"
        android:icon="@drawable/ic_info"
        android1:title="Información"
        android:iconTint="@color/icons"
        app:showAsAction="ifRoom"
        android:orderInCategory="2"
        />
    <item
        android:id="@+id/buscar"
        android:title="Buscar"
        android:iconTint="@color/icons"
        android:icon="@android:drawable/ic_menu_search"
        android:orderInCategory="1"
        app:showAsAction="always"

        />

    <!--
       Mostrar Iconos
        app:showAsAction="never"->nunca se va a mostrar
        app:showAsAction="ifRoom"->si tiene espacio se muestra sino no
        app:showAsAction="always"->siempre se va a mostrar
       Ordenar item
        android:orderInCategory="1"

    -->
</tool:menu>