<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ContadorMejoradoActivity"
    android:weightSum="1"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".2"
        android:gravity="top|center_horizontal"
        android:orientation="vertical"
        android:paddingTop="5dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contador"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:textSize="56dp"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".6"
        android:weightSum=".8"
        android:orientation="horizontal"

        android:gravity="center|center_horizontal">
        <Button
            android:id="@+id/btnIncrement"
            android:layout_width="0dp"
            android:text="@string/mas"
            android:clickable="true"
            android:textColor="@android:color/white"
            android:tint="@android:color/white"
            android:background="@color/colorAccent"
            android:layout_marginBottom="@dimen/margin.element"
            android:drawableLeft="@drawable/ic_exposure_plus"
            android:layout_height="wrap_content"
            android:layout_weight=".2"
            android:layout_marginRight="36dp"
            />

        <Button
            android:id="@+id/btnRestar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/menos"
            android:clickable="true"
            android:textColor="@android:color/white"
            android:tint="@android:color/white"
            android:background="@color/colorPrimaryDark"
            android:layout_marginBottom="@dimen/margin.element"
            android:drawableLeft="@drawable/ic_exposure_neg"
            android:layout_weight=".2"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".2"
        android:paddingTop="16dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"

        >

        <Button
            android:id="@+id/btnReset"
            android:drawableLeft="@drawable/ic_restore"
            android:paddingEnd="1dp"
            android:layout_width="wrap_content"
            android:text="@string/reset"
            android:clickable="true"
            android:layout_marginBottom="@dimen/margin.element"
            android:textColor="@android:color/white"
            android:tint="@android:color/white"
            android:background="@color/colorAccent"

            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>